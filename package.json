{
  "name": "moonhaze",
  "version": "0.1.0",
  "description": "A CLI driven stardew valley hommage thingy",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "coverage": "nyc -r lcov -e .ts -x \"**/*.test.ts\" npm test",
    "coverageWatcher": "chokidar \"**/*.ts\" -c 'nyc -r lcov -e .ts -x \"**/*.test.ts\" -x \"coverage/*\" npm test'",
    "testWatcher": "chokidar \"**/*.ts\" -c \"npm test\""
  },
  "author": "Sven Finke",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^10.0.2",
    "chai": "^4.3.4",
    "chokidar-cli": "^2.1.0",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "sinon": "^11.1.1",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.0.0",
    "tslint": "^5.12.1",
    "typescript": "^3.9"
  },
  "dependencies": {
    "@google-cloud/datastore": "^6.4.0"
  }
}
